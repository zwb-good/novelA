<!-- 书籍的数据表格 -->      
<table id="tbl_book" class="easyui-datagrid" data-options="singleSelect:true,fit:true,toolbar:'#tb_book',pagination:true,pageSize:20,pageList:[10,20,50],">
  <thead>
    <tr>
      <th data-options="field:'selector',checkbox:true"></th>
      <th data-options="field:'id',width:40,align:'center',hidden:true">编号</th>
      <th data-options="field:'name',width:150,align:'center'">书名</th>
      <th data-options="field:'author',width:100,align:'center'">作者</th>
      <th data-options="field:'type',width:100,align:'center'" formatter="formatType">类型</th>
      <th data-options="field:'imgUrl',width:180,align:'center'" formatter="formatImg">封面地址</th>
      <!--<th data-options="field:'catalogueUrl',width:180,align:'center'" formatter="formatCatalogue">目录地址</th>-->
      <th data-options="field:'txtUrl',width:180,align:'center'" formatter="formatTxt">内容地址</th>
      <th data-options="field:'abstractText',width:300,align:'center'">摘要</th>
    </tr>
  </thead>
</table>
<!-- 工具栏 -->
<div id="tb_book" style="padding:5px;">
  <input class="easyui-textbox" style="width:160px;" id="title" data-options="prompt:'书名/作者/类型'"/>
  <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search'" id="a_search">查询</a>
  <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add'" id="a_insert">添加</a>
  <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit'" id="a_update">修改</a>
  <a href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-delete'" id="a_delete">删除</a>
</div>
