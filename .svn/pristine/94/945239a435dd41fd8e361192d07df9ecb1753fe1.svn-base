package com.lemon.controller;

import java.io.IOException;
import java.io.PrintWriter;
import java.util.List;
import java.util.UUID;

import javax.servlet.http.HttpServletResponse;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.ResponseBody;

import com.google.gson.Gson;
import com.lemon.pojo.Reader;
import com.lemon.pojo.User;
import com.lemon.service.UserService;
import com.lemon.utils.JsonMsg;

@Controller
public class UserController {
	
	@Autowired
	private UserService userService;
	
	@RequestMapping("/regist")
	@ResponseBody
	public void addUser(User user,Reader reader,
			@RequestParam(value = "callback") String callback,
			HttpServletResponse response   ) throws IOException{
		response.setContentType("application/json;charset=utf-8");
		reader.setHeadurl("http://pry165fg6.bkt.clouddn.com/image/header/moren.jpg");
		String name = UUID.randomUUID().toString().substring(0, 5);
		reader.setName(name);
		JsonMsg jsonMsg;
		try {
			jsonMsg = userService.addUser(user,reader);
			//return (callback + "(" + new Gson().toJson(jsonMsg) + ")");
			PrintWriter out = response.getWriter();
			out.print(callback + "(" + new Gson().toJson(jsonMsg) + ")");
			out.flush();
			out.close();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}
