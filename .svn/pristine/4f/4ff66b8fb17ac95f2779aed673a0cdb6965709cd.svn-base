<!-- 书籍的数据表格 -->      
<table id="tbl_guidePage" class="easyui-datagrid" data-options="singleSelect:true,fit:true,toolbar:'#tb'">
  <thead>
    <tr>
      <th data-options="field:'selector',checkbox:true"></th>
      <th data-options="field:'id',width:40,align:'center',hidden:true">编号</th>
      <th data-options="field:'name',width:150,align:'center'">书名</th>
      <th data-options="field:'author',width:100,align:'center'">作者</th>
      <th data-options="field:'type',width:100,align:'center'">类型</th>
      <th data-options="field:'imgUrl',width:180,align:'center'">封面地址</th>
      <th data-options="field:'catalogueUrl',width:180,align:'center'">目录地址</th>
      <th data-options="field:'txtUrl',width:180,align:'center'">内容地址</th>
      <th data-options="field:'abstract',width:400,align:'center'">摘要</th>
    </tr>
  </thead>
</table>
<!-- 工具栏 -->
<div id="tb" style="padding:5px;">
  <input class="easyui-textbox" style="width:160px;" id="title" data-options="prompt:'书名/作者/类型'"/>
  <a id="btn_Query" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-search'">查询</a>
  <a id="btn_Add" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-add'">添加</a>
  <a id="btn_Edit" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-edit'">修改</a>
  <a id="btn_Del" href="javascript:void(0)" class="easyui-linkbutton" data-options="iconCls:'icon-cancel'">删除</a>
</div>
